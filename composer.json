{
  "name": "cbartolo/trip-calculator",
  "description": "Library to calculate vehicle trip costs",
  "keywords": [
    "trip",
    "costing",
    "savings",
    "psr-12"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Chris Bartolo",
      "email": "chris@chrisbartolo.com"
    }
  ],
  "type": "library",
  "require": {
    "php": "~7.4",
    "guzzlehttp/guzzle": "^7.3",
    "ext-json": "*",
    "ext-decimal": "*",
    "php-di/php-di": "^6.3",
    "doctrine/annotations": "^1.12",
    "alexpechkarev/geometry-library": "1.0.2"
  },
  "require-dev": {
    "phpunit/phpunit": "9.5.*",
    "mockery/mockery": "^1.4",
    "phpunit/php-code-coverage": "^9.2"
  },
  "autoload": {
    "psr-4": {
      "Trip\\Calculator\\": "src/TripCalculator"
    },
    "classmap": [
      "src/",
      "tests/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Trip\\Tests\\": "tests/"
    }
  }
}
